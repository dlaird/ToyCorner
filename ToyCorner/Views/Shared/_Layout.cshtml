<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon-32.png">

    <style>
        body {
            padding-top: 50px;
            padding-bottom: 20px;
            /*background-image: url("/Images/Logos/toyCornerLogo-bw.jpg");*/
            background-repeat: no-repeat;
        }

        .bottom-links {
            padding-top: 50px;
        }

        img {
            display: block;
            margin: auto;
        }

        #tagline {
            font-style: italic;
            position: relative;
            top: 50%;
            transform: translateY(-50%);
        }

        #navbarlogo {
            border: 2px;
            border-style: solid;
        }

    </style>

    <title>Toy Corner</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- Static navbar -->
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <h1>The Toy Corner</h1>
                <h4><em>Gently used toys on offer to the Austin Waldorf School community.</em></h4>
            </div>
            <div class="navbar-nav navbar-right">
                <img src="~/Images/Logos/toyCornerLogo.jpg" id="navbarlogo" style="width:125px;height:125px;" />
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>For more information please contact David or Michele Laird at 512-829-1191 or d2 @@ thelairds . net.</p>
            <p></p>
            <p><small>&copy; 2016 - ATX Tex Mex - The Toy Corner</small></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
