@model List<ToyCorner.Models.Item>

@{
    ViewBag.Title = "Items";
}

<h2>@Model[0].TypeDescription</h2>

@{ int i = 0;}
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-xs-9 col-sm-5 col-md-6">
            <a href="~/Item/Details/@item.ItemID" ><h4>@item.ItemName</h4></a>
            <p>@item.ItemDescription</p>
            <p>Asking $@item.ItemPrice</p>
        </div>

        <div class="col-xs-9 col-sm-5 col-md-6">
            <div id="myCarousel\@i" class="carousel" data-ride="carousel" data-interval="3000">
                <div class="carousel-inner" role="listbox">
                    @{ int j = 0;}
                    @foreach (var photo in item.ItemImages)
                {
                    if (j == 0)
                    {
                            <div class="item active">
                                <img src="~/Images/@photo" style="width:120px;height:90px;">
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <img src="~/Images/@photo" style="width:120px;height:90px;">
                            </div>
                        }
                        j++;
                    }
                </div>

            </div>
        </div>
        <hr>
    </div>
i++;
}

<div class="bottom-links">
    <div class="row">
        <div class="col-xs-4 col-sm-2 col-md-3"><a href="/Type/Index" class="btn btn-primary">Back Home</a></div>
    </div>
</div>

